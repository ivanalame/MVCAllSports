@using System.Security.Claims
@model Usuario
<style>
    .bg-light-blue {
        background-color: #0d9cc4;
        border: 1px solid #0d9cc4;
    }
</style>
<div class="container mt-5">
    <div class="row justify-content-center bg-light-blue">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="card-title mb-4">Perfil de @Model.Email</h2> 
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <h4>Información Personal</h4>
                            <hr>
                            <p><strong>Nombre:</strong> @Model.Nombre</p>
                            <p><strong>Apellidos:</strong> @Model.Apellidos</p>
                            <p><strong>Nif:</strong> @Model.Nif</p>
                            <p><strong>Email:</strong> @Model.Email</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
