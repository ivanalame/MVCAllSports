@model MVCAllSports.Models.Producto

@{
    ViewData["Title"] = "_DetalleMisCompras";
    string UrlBucket = keysModel.BucketUrl;
}

<style>
    .container {
        padding-top: 50px;
    }

    .card {
        border: none;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        border-radius: 20px;
    }

    .card-body {
        background-color: #f8f9fa;
        color: #343a40; 
    }

    .product-img {
        max-width: 100%;
        border-radius: 20px;
    }

    .product-info {
        padding: 20px;
        border-left: 2px solid #007bff;
    }

        .product-info h4 {
            color: #007bff;
        }

        .product-info p {
            color: #6c757d;
        }
</style>
<a asp-action="MisCompras" asp-controller="deportes" class="btn btn-secondary back-btn">Volver atrás</a>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Detalle de la Compra</h2>
                    <div class="row">
                        <div class="col-md-5">
                            <img src="@UrlBucket@Model.Imagen" alt="Imagen del producto" class="img-fluid product-img">
                        </div>
                        <div class="col-md-7 product-info">
                            <h4 class="mb-3">@Model.Nombre</h4>
                            <p class="mb-2"><strong>Descripción: </strong>@Model.Descripcion</p>
                            <p class="mb-2"><strong>Precio: </strong>@Model.Precio,00€</p>
                            <p class="mb-2"><strong>Marca: </strong>@Model.Marca</p>
                            <p class="mb-2">
                                <strong>Talla: </strong>@{
                                    string talla = "";
                                    switch (Model.Talla)
                                    {
                                        case 1:
                                            talla = "S";
                                            break;
                                        case 2:
                                            talla = "M";
                                            break;
                                        case 3:
                                            talla = "L";
                                            break;
                                        case 4:
                                            talla = "XL";
                                            break;
                                        default:
                                            talla = "No disponible";
                                            break;
                                    }
                                    @talla
                                }
                            </p>
                            <p class="mb-2"><strong>Categoría: </strong>@Model.IdCategoriaProducto</p>
                            <p class="mb-2"><strong>Descripción Larga: </strong>@Model.Descripcion_Larga</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>